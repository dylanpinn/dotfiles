  "license": "MIT",
  "private": true,
  "scripts": {},
  "devDependencies": {
    "husky": "^4.2.3",
    "lint-staged": "^10.1.2",
    "prettier": "^2.0.4"
  },
  "lint-staged": {
    "**/*.sh": [
      "shfmt -i 2 -ci -w"
    ],
    "bin/*": [
      "shell-fmt"
    ],
    "*.{json,js}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
