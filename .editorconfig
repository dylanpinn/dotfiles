# top-most EditorConfig file.
root = true

# Sensible defaults for all file types.
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[[bash]]
indent_style = space
indent_size = 4
language_dialect = bash

[*.bash]
indent_style = space
indent_size = 4
language_dialect = bash

[[shell]]
indent_style = space
indent_size = 4
language_dialect = posix

[*.sh]
indent_style = space
indent_size = 4
language_dialect = posix

# Makefile requires tabs.
[Makefile]
indent_style = tab
indent_size = 4

# Ignore vendor files (shfmt)
[nvim/pack/opt/bundle/**]
ignore = true
