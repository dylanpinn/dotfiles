[alias]
	co = checkout
	st = status

	# Add
	aa = add --all
	ap = add --patch

	# Branch
	branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
	update-branch = !"git fetch --all -p && git rebase origin/master"
	remove-remote = !"git fetch --all -p; git branch -vv | grep \": gone]\" | awk '{ print $1 }' | xargs -n 1 git branch -D"

	# Commit
	amend = commit --amend
	ci = commit --verbose

	# Diff
	di = diff
	dc = diff --cached

	# Log
	glg = log --oneline --graph --all --decorate=short

	# Merge
	ff = merge --ff-only
	noff = merge --no-ff

	# Push
	pf = push --force-with-lease
[color]
	ui = auto
[fetch]
	prune = true
[help]
	autocorrect = 10
[init]
	defaultBranch = main
[merge]
	conflictStyle = diff3
	ff = only
[mergetool]
	keepBackup = false
[pull]
	ff = only
[rebase]
	autosquash = true

