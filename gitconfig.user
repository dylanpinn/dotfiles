[alias]
  aa = add --all
  amend = commit --amend
  ap = add --patch
  ci = commit --verbose
  co = checkout
  di = diff
  dc = diff --cached
  ff = merge --ff-only
  pf = push --force-with-lease
  st = status
  noff = merge --no-ff

[color]
  ui = auto
[mergetool]
  keepBackup = false
[core]
  autocrlf = input
	excludesfile = ~/.gitignore
[merge]
  ff = only
[fetch]
  prune = true
[rebase]
  autosquash = true
[diff]
  colorMoved = zebra

# vi:syntax=gitconfig
