[alias]
	co = checkout
	st = status

	# Add
	aa = add --all
	ap = add --patch

	# Branch
	branches = for-each-ref --sort=-committerdate --format=\"%(color:blue)%(authordate:relative)\t%(color:red)%(authorname)\t%(color:white)%(color:bold)%(refname:short)\" refs/remotes
	# TODO: Allow this to take an optional branch as an argument.
	update-branch = !"git fetch --all -p && git rebase origin/master"
	remove-remote = !"git fetch --all -p; git branch -vv | grep \": gone]\" | awk '{ print $1 }' | xargs -n 1 git branch -D"

	# Commit
	amend = commit --amend
	ci = commit --verbose

	# Diff
	di = diff
	dc = diff --cached
	wdiff = diff -w --word-diff=color

	# Divergence (commits we added and commits remote added)
	div = divergence

	# Merge
	ff = merge --ff-only
	noff = merge --no-ff

	# Push
	pf = push --force-with-lease
	# TODO: Fix this command.
	set-upstream = !git branch --set-upstream-to=origin/`git symbolic-ref --short HEAD`
[color]
	ui = auto
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[core]
	autocrlf = input
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[diff]
	colorMoved = zebra
[fetch]
	prune = true
[init]
	defaultBranch = main
[merge]
	conflictStyle = diff3
	ff = only
[mergetool]
	keepBackup = false
[pull]
	ff = only
[rebase]
	autosquash = true

